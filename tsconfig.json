{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
